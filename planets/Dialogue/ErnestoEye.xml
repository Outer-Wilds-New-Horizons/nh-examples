<DialogueTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/xen-42/outer-wilds-new-horizons/main/NewHorizons/Schemas/dialogue_schema.xsd">
	<NameField>Ernesto</NameField>

	<DialogueNode>
		<Name>START</Name>
		<EntryCondition>DEFAULT</EntryCondition>
		<Dialogue>
			<Page>Hey it's me Ernesto the magic talking anglerfish.</Page>
		</Dialogue>

		<DialogueOptionsList>
			<DialogueOption>
				<Text>Woah, how'd you get here?</Text>
				<DialogueTarget>HOW</DialogueTarget>
			</DialogueOption>
			<DialogueOption>
				<Text>I'll see you later.</Text>
				<DialogueTarget>BYE</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>

		<RevealFacts>
			<FactID>EXAMPLES_ERNESTO</FactID>
		</RevealFacts>
	</DialogueNode>
	
	<DialogueNode>
		<Name>HOW</Name>
		<Dialogue>
			<Page>Magic.</Page>
		</Dialogue>
		<DialogueOptionsList>
			<DialogueOption>
				<Text>Oh.</Text>
				<DialogueTarget>START</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>
	</DialogueNode>

	<DialogueNode>
		<Name>BYE</Name>
		<Dialogue>
			<Page>Bye bye.</Page>
		</Dialogue>
	</DialogueNode>

</DialogueTree>